{{#if IsAdmin}}
<header>
    <h1>Bienvenido a la página de Administrador del sitio</h1>
    <h3 class="identification_tittle">Usuario identificado como: <i>{{username}}</i></h3>
    <h3 class="identification_tittle">Página exclusiva de Administrador</h3>
    <div class="icon_cart_container">
        <a href="/api/sessions/logout" class="delete_button">Cerrar sesión</a>
    </div>
</header>
{{else}}
<header>
    <h1>Bienvenido a nuestra tienda!!</h1>
    <h3 class="identification_tittle">Usuario identificado como: <i>{{username}}</i></h3>
    <div class="icon_cart_container">
        <i class='icon_cart bx bx-cart' id="cart_route">Cart</i>
        <a href="/api/sessions/logout" class="delete_button">Cerrar sesión</a>
    </div>
</header>
{{/if}}

<div id="productList">
    <h2 class="h2_title">Listado de Productos</h2>

    {{#if IsAdmin}}
    <div id="adminProductList">
        {{#each productos}}
        <div>
            <li>
                Nombre:           <b>  {{this.title}}      </b>
                <p><b>Descripción:</b> {{this.description}}</p>
                <p>Precio:        <b>$ {{this.price}}  </b></p>
                <p>Código:        <b>  {{this.code}}   </b></p>
                <p>Stock:         <b>  {{this.stock}}  </b></p>
                <p>Id:            <b>  {{this._id}}    </b></p>
                <button type="button" class="delete_button" onclick='deleteProduct("{{this._id}}")'>Eliminar</button>
                <button type="button" class="add_button modal_add_button" id="open_modal_update_product_{{this._id}}">Actualizar</button>
                <dialog id="modal_{{this._id}}" class="modal">
                    <form action="/productosactualizados" class="form_modal" method="POST">
                        <input type="hidden" name="_id" value="{{this._id}}">
                        <label for="title" class="field_modal_form">Nombre del producto</label>
                        <input type="text" name="title" placeholder="Ingrese el nombre del producto" class="input_modal_form" id="modal_title_${{this._id}}">
                        <label for="description" class="field_modal_form">Descripción</label>
                        <input type="text" name="description" placeholder="Ingrese la descripción del producto" class="input_modal_form" id="modal_description_${{this._id}}">
                        <label for="price" class="field_modal_form">Precio</label>
                        <input type="text" name="price" placeholder="Ingrese el precio del producto" class="input_modal_form" id="modal_price_${{this._id}}">
                        <label for="thumbnail" class="field_modal_form">Imagen</label>
                        <input type="text" name="thumbnail" placeholder="Ingrese una imagen descriptiva" class="input_modal_form" id="modal_thumbnail_${{this._id}}">
                        <label for="code" class="field_modal_form">Código</label>
                        <input type="text" name="code" placeholder="Ingrese el código del producto" class="input_modal_form" id="modal_code_${{this._id}}">
                        <label for="stock" class="field_modal_form">Stock</label>
                        <input type="text" name="stock" placeholder="Ingrese un número para el stock" class="input_modal_form" id="modal_stock_${{this._id}}">
                        <label for="status" class="field_modal_form">Status</label>
                        <input type="text" name="status" placeholder="Ingrese el status del producto" class="input_modal_form" id="modal_status_${{this._id}}">
                        <label for="category" class="field_modal_form">Categoría</label>
                        <input type="text" name="category" placeholder="Ingrese la categoría del producto" class="input_modal_form" id="modal_category_${{this._id}}">
                        <input value="Actualizar producto" type="submit" class="add_button button_submit_modal_form">
                    </form>
                    <button type="button" class="delete_button" onclick="closeModal('{{this._id}}')">Cerrar</button>
                </dialog>
            </li>
        </div>
        {{/each}}
    </div>

    <div>
        <h2>Agregar un producto</h2>

        <form action="/realTimeProducts" method="post" id="form_add" onsubmit="addProduct(); return false;">
            <li class="add_product_element">
                <label for="title" class="add_product_label">Nombre del Producto:</label>
                <input type="text" class="add_product_input" id="title" name="product_title" placeholder="El título del producto debe ser único" required />
            </li>
            <li class="add_product_element">
                <label for="description" class="add_product_label">Descripción:</label>
                <input type="text" class="add_product_input" id="description" name="product_description" placeholder="Describa brevemente el producto" />
            </li>
            <li class="add_product_element">
                <label for="price" class="add_product_label">Precio:</label>
                <input type="text" class="add_product_input" id="price" name="product_price" placeholder="Ingrese un valor numérico" required />
            </li>
            <li class="add_product_element">
                <label for="thumbnail" class="add_product_label">Imagen:</label>
                <input type="text" class="add_product_input" id="thumbnail" name="product_thumbnail" placeholder="Imagen descriptiva del producto" />
            </li>
            <li class="add_product_element">
                <label for="code" class="add_product_label">Código:</label>
                <input type="text" class="add_product_input" id="code" name="product_code" placeholder="El código debe ser único por cada producto" required />
            </li>
            <li class="add_product_element">
                <label for="stock" class="add_product_label">Stock:</label>
                <input type="text" class="add_product_input" id="stock" name="product_stock" placeholder="Ingrese un valor numérico" required />
            </li>
            <li class="add_product_element">
                <label for="status" class="add_product_label">Status:</label>
                <input type="bool" class="add_product_input" id="status" name="product_status" placeholder="El valor por defecto es true" />
            </li>
            <li class="add_product_element">
                <label for="category" class="add_product_label">Categoría:</label>
                <input type="text" class="add_product_input" id="category" name="product_category" placeholder="Elija enter alguna de las tres categorías existentes" />
            </li>
            <li id="submit_button_list">
                <input value="Agregar" type="submit" id="submit_button" class="add_button">
            </li>
        </form>
    </div>
    {{else}}
    <div id="userProductList">
        {{#each productos}}
        <div>
            <li>
                Nombre:           <b>  {{this.title}}      </b>
                <p><b>Descripción:</b> {{this.description}}</p>
                <p>Precio:        <b>$ {{this.price}}  </b></p>
                <p>Stock:         <b>  {{this.stock}}  </b></p>
                <input type="number" id="quantity-{{this._id}}" value="1" min="1" max="{{this.stock}}" />
                <button type="button" class="add_button" onclick='addProductToCart("{{this._id}}", document.getElementById("quantity-{{this._id}}").value)'>Agregar al carrito</button>
            </li>
        </div>
        {{/each}}
    </div>
    <a href="/chatbox" class="chat_link">Chatea con otros usarios de nuestra comunidad</a>
    {{/if}}
</div>

<link rel="stylesheet" href="/css/index.css">
<script src="/socket.io/socket.io.js"></script>
<script src="/js/indexSimple.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const role = sessionStorage.getItem('role');
        const cartId = sessionStorage.getItem('cartId');
        const username = sessionStorage.getItem('username');
        const isAdmin = role === 'admin';

        document.querySelectorAll('.identification_tittle i').forEach(element => element.textContent = username);
        document.querySelectorAll('.icon_cart_container i').forEach(element => {
            if (element.id === "cart_route") {
                element.addEventListener('click', () => {
                    window.location.href = `/cart/${cartId}`;
                });
            }
        });
    })

    document.querySelectorAll('.modal_add_button').forEach(button => {
        button.addEventListener('click', (event) => {
            const productId = event.target.id.replace('open_modal_update_product_', '');
            const modal = document.getElementById(`modal_${productId}`);
            modal.showModal();
        });
    });

    function closeModal(productId) {
        const modal = document.getElementById(`modal_${productId}`);
        modal.close();
    }
</script>